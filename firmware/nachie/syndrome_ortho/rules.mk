# MCU name
MCU = RP2040

# Bootloader selection
BOOTLOADER = rp2040

BOARD = GENERIC_RP_RP2040

#RP2040 Options
ALLOW_WARNINGS = yes


RGB_MATRIX_SUPPORTED = yes
RGB_MATRIX_ENABLE = yes
RGB_MATRIX_DRIVER = WS2812

WS2812_DRIVER = vendor

OLED_ENABLE = yes
OLED_DRIVER = SSD1306
WPM_ENABLE = yes
LTO_ENABLE = yes

OPT_DEFS += -DHAL_USE_I2C=TRUE

#solenoid
HAPTIC_ENABLE = yes
HAPTIC_DRIVER += SOLENOID